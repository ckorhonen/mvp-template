# ==============================================================================
# Cloudflare Workers MVP Template - Environment Variables
# ==============================================================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Cloudflare Account Configuration
# ------------------------------------------------------------------------------
# Get your account ID from: https://dash.cloudflare.com/
# Navigate to: Workers & Pages -> Overview -> Account ID
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ------------------------------------------------------------------------------
# AI Gateway Configuration
# ------------------------------------------------------------------------------
# Create AI Gateway at: https://dash.cloudflare.com/ -> AI -> AI Gateway
# Get gateway ID from the dashboard
AI_GATEWAY_ID=your-ai-gateway-id

# OpenAI API Key for AI Gateway
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ------------------------------------------------------------------------------
# D1 Database Configuration
# ------------------------------------------------------------------------------
# Database binding name (matches wrangler.toml)
DB_BINDING=DB

# Database IDs for different environments
D1_DATABASE_ID_DEV=your-dev-database-id
D1_DATABASE_ID_STAGING=your-staging-database-id
D1_DATABASE_ID_PRODUCTION=your-production-database-id

# ------------------------------------------------------------------------------
# KV Namespace Configuration
# ------------------------------------------------------------------------------
# KV binding name (matches wrangler.toml)
KV_BINDING=MY_KV

# KV namespace IDs for different environments
KV_NAMESPACE_ID_DEV=your-dev-kv-namespace-id
KV_NAMESPACE_ID_STAGING=your-staging-kv-namespace-id
KV_NAMESPACE_ID_PRODUCTION=your-production-kv-namespace-id

# ------------------------------------------------------------------------------
# R2 Storage Configuration
# ------------------------------------------------------------------------------
# R2 binding name (matches wrangler.toml)
R2_BINDING=MY_BUCKET

# R2 bucket names for different environments
R2_BUCKET_NAME_DEV=my-bucket-dev
R2_BUCKET_NAME_STAGING=my-bucket-staging
R2_BUCKET_NAME_PRODUCTION=my-bucket-production

# ------------------------------------------------------------------------------
# Analytics Engine Configuration
# ------------------------------------------------------------------------------
# Analytics binding name (matches wrangler.toml)
ANALYTICS_BINDING=ANALYTICS

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# API Base URL
API_BASE_URL=http://localhost:8787

# API Version
API_VERSION=v1

# ------------------------------------------------------------------------------
# Authentication & Security
# ------------------------------------------------------------------------------
# API Keys for authentication (rotate regularly)
API_KEY=your-api-key-here

# JWT Secret (generate a strong random string)
JWT_SECRET=your-jwt-secret-here

# Session secret
SESSION_SECRET=your-session-secret-here

# ------------------------------------------------------------------------------
# Rate Limiting Configuration
# ------------------------------------------------------------------------------
# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=60000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# External Services (Optional)
# ------------------------------------------------------------------------------
# Stripe API Key
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# SendGrid API Key
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn

# ------------------------------------------------------------------------------
# Development Configuration
# ------------------------------------------------------------------------------
# Local development port
PORT=8787

# Enable debug mode
DEBUG=true

# Log level: debug, info, warn, error
LOG_LEVEL=debug
