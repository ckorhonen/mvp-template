# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=MVP Template
VITE_APP_VERSION=1.0.0

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:8787
VITE_API_TIMEOUT=10000

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_AI_FEATURES=true

# ============================================
# Cloudflare Account Configuration
# ============================================
# Get these from: https://dash.cloudflare.com/
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# ============================================
# OpenAI Configuration
# ============================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Cloudflare AI Gateway Configuration
# ============================================
# Set up at: https://dash.cloudflare.com/?to=/:account/ai/ai-gateway
AI_GATEWAY_ID=your-gateway-id
AI_GATEWAY_URL=https://gateway.ai.cloudflare.com/v1

# ============================================
# D1 Database Configuration
# ============================================
# Create with: wrangler d1 create mvp-template-db
D1_DATABASE_ID=your-d1-database-id
D1_DATABASE_NAME=mvp-template-db

# ============================================
# KV Namespace Configuration
# ============================================
# Create with:
# wrangler kv:namespace create CACHE
# wrangler kv:namespace create SESSIONS
KV_CACHE_ID=your-cache-namespace-id
KV_SESSIONS_ID=your-sessions-namespace-id

# ============================================
# R2 Bucket Configuration
# ============================================
# Create with:
# wrangler r2 bucket create mvp-template-files
# wrangler r2 bucket create mvp-template-assets
R2_FILES_BUCKET=mvp-template-files
R2_ASSETS_BUCKET=mvp-template-assets

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Environment
# ============================================
ENVIRONMENT=development
NODE_ENV=development

# ============================================
# Rate Limiting
# ============================================
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================
# Notes
# ============================================
# 1. Copy this file to .env for local development
# 2. Never commit .env to version control
# 3. For Workers secrets, use: wrangler secret put <KEY>
# 4. Update wrangler.toml with your resource IDs
# 5. See SETUP.md for detailed configuration instructions
