# Cloudflare Workers MVP Template - Environment Configuration
# Copy this file to .env.local for local development
# Use 'wrangler secret put SECRET_NAME' for production secrets

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================

# Your Cloudflare Account ID
# Find at: https://dash.cloudflare.com/ -> Select account -> Account ID
CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# AI Gateway ID
# Create at: https://dash.cloudflare.com/ -> AI -> AI Gateway
AI_GATEWAY_ID=your-ai-gateway-id

# =============================================================================
# ENVIRONMENT
# =============================================================================

ENVIRONMENT=development
LOG_LEVEL=debug

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

# OpenAI API Key
# Get at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Key (optional)
# Get at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# HuggingFace API Token (optional)
# Get at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_...

# Replicate API Token (optional)
# Get at: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=r8_...

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Secret for token signing
# Generate with: openssl rand -base64 32
JWT_SECRET=your-very-secure-jwt-secret-here-use-openssl-to-generate

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# D1 Database IDs
# Create database: wrangler d1 create mvp-database
D1_DATABASE_ID=your-d1-database-id
D1_PREVIEW_DATABASE_ID=your-preview-d1-database-id

# =============================================================================
# KV NAMESPACE IDS
# =============================================================================

# Create KV namespaces:
# wrangler kv:namespace create CACHE
# wrangler kv:namespace create SESSIONS
KV_CACHE_ID=your-kv-cache-namespace-id
KV_CACHE_PREVIEW_ID=your-preview-kv-cache-namespace-id
KV_SESSIONS_ID=your-kv-sessions-namespace-id
KV_SESSIONS_PREVIEW_ID=your-preview-kv-sessions-namespace-id

# =============================================================================
# R2 BUCKET NAMES
# =============================================================================

# Create R2 buckets:
# wrangler r2 bucket create mvp-assets
# wrangler r2 bucket create mvp-uploads
R2_ASSETS_BUCKET=mvp-assets
R2_ASSETS_PREVIEW_BUCKET=mvp-assets-preview
R2_UPLOADS_BUCKET=mvp-uploads
R2_UPLOADS_PREVIEW_BUCKET=mvp-uploads-preview

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Create queue: wrangler queues create mvp-tasks
QUEUE_NAME=mvp-tasks
QUEUE_DLQ_NAME=mvp-tasks-dlq

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Sentry DSN (optional)
# For error tracking: https://sentry.io/
# SENTRY_DSN=https://...@sentry.io/...

# Stripe API Keys (optional)
# For payments: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# SendGrid API Key (optional)
# For emails: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY=SG....

# Twilio Credentials (optional)
# For SMS: https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1...

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Wrangler CLI settings
WRANGLER_LOG=log

# Local development port
PORT=8787

# =============================================================================
# NOTES
# =============================================================================

# For local development:
# 1. Copy this file: cp .env.example .env.local
# 2. Fill in your actual values
# 3. Run: npm run worker:dev

# For production deployment:
# 1. Set secrets using: wrangler secret put SECRET_NAME
# 2. Update wrangler.toml with your IDs
# 3. Deploy: npm run worker:deploy

# Never commit actual secrets to version control!
