# ===========================================
# Cloudflare Workers MVP Template
# Environment Configuration
# ===========================================

# Cloudflare Account Configuration
# Get these from: https://dash.cloudflare.com
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# OpenAI API Configuration (for AI Gateway)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Cloudflare AI Gateway
# Create at: https://dash.cloudflare.com/ai/ai-gateway
AI_GATEWAY_ID=your-ai-gateway-id
AI_GATEWAY_ENDPOINT=https://gateway.ai.cloudflare.com/v1/{account_id}/{gateway_id}

# D1 Database IDs
# Create with: wrangler d1 create mvp-database
D1_DATABASE_ID=your-d1-database-id
D1_PREVIEW_DATABASE_ID=your-preview-d1-database-id

# KV Namespace IDs
# Create with: wrangler kv:namespace create CACHE
KV_CACHE_ID=your-kv-cache-namespace-id
KV_CACHE_PREVIEW_ID=your-preview-kv-cache-namespace-id
KV_SESSIONS_ID=your-kv-sessions-namespace-id
KV_SESSIONS_PREVIEW_ID=your-preview-kv-sessions-namespace-id

# R2 Bucket Names
# Create with: wrangler r2 bucket create mvp-assets
R2_ASSETS_BUCKET=mvp-assets
R2_ASSETS_PREVIEW_BUCKET=mvp-assets-preview
R2_UPLOADS_BUCKET=mvp-uploads
R2_UPLOADS_PREVIEW_BUCKET=mvp-uploads-preview

# Worker Configuration
WORKER_NAME=mvp-template
WORKER_ENVIRONMENT=development
WORKER_LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=10
RATE_LIMIT_AI_IMAGE_REQUESTS_PER_MINUTE=5

# Session Configuration
SESSION_DURATION_SECONDS=86400
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_COOKIE_NAME=mvp_session
SESSION_SECURE_COOKIE=true

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRES_IN=7d

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_AUTH_ENABLED=true

# Development Configuration
DEV_PORT=8787
DEV_HOST=localhost
DEV_HTTPS=false

# Production Configuration
PRODUCTION_URL=https://yourdomain.com
PRODUCTION_API_URL=https://api.yourdomain.com

# Monitoring and Observability
ENABLE_LOGGING=true
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# External Services (Optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
SENDGRID_API_KEY=SG.your-sendgrid-key
TWILIO_ACCOUNT_SID=ACyour-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# Database Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_FREQUENCY=daily

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USERS=300
CACHE_TTL_SESSIONS=1800

# AI Model Configuration
AI_DEFAULT_MODEL=gpt-4
AI_DEFAULT_TEMPERATURE=0.7
AI_DEFAULT_MAX_TOKENS=2000
AI_EMBEDDING_MODEL=text-embedding-ada-002
AI_IMAGE_MODEL=dall-e-3
AI_IMAGE_DEFAULT_SIZE=1024x1024
AI_IMAGE_DEFAULT_QUALITY=standard

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=/uploads

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=MVP Template
EMAIL_SUPPORT_ADDRESS=support@yourdomain.com

# Analytics
ANALYTICS_TRACKING_ID=GA-XXXXXXXXX
ENABLE_ANALYTICS_ENGINE=true

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_X_FRAME_OPTIONS=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEBUG_LOGS=true
